(jbuild_version 1)

(executables
 ((names (test_mapper test_parser))
  (libraries (mapper
              oUnit
              sexplib str cmdliner unix
              fmt fmt.cli fmt.tty
              logs logs.cli logs.fmt))
 )
)

(alias
 ((name mappert)
  (deps    (test_mapper.exe))
  (action (run ${<})))
)

(alias
 ((name parsert)
  (deps    (test_parser.exe))
  (action (run ${<})))
)

(alias
 ((name    runtest)
  (deps    ((alias mappert) (alias parsert))))
)
