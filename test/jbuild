(jbuild_version 1)

(executables
 ((names (test_init test_mapper test_parser test_server))
  (libraries (mapper
              oUnit
              sexplib str cmdliner unix
              fmt fmt.cli fmt.tty
              logs logs.cli logs.fmt))
 )
)

(alias
 ((name mappert)
  (deps    (test_mapper.exe))
  (action (run ${<})))
)

(alias
 ((name parsert)
  (deps    (test_parser.exe))
  (action (run ${<})))
)

(alias
 ((name servert)
  (deps    (test_server.exe))
  (action (run ${<})))
)

(alias
 ((name initt)
  (deps    (test_init.exe))
  (action (run ${<})))
)

(alias
 ((name    runtest)
  (deps    ((alias mappert) (alias parsert) (alias servert) (alias initt))))
)
